<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.Login">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Text="Username:" />
            <Entry Grid.Row="0" Grid.Column="1" ></Entry>
            <Label Grid.Row="1" Grid.Column="0" Text="Password:" />
            <Entry Grid.Row="1" Grid.Column="1" IsPassword="true"></Entry>
            <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Login" Clicked="Button_Clicked"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>